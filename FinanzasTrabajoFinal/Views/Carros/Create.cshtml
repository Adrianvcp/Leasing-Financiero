    @using (Html.BeginForm("Create", "Carros"))
    {
        <div class="container">
            <div class="main-bothside">
                <form action="#" method="post">
                    <link href="~/css/jquery-ui.css" rel="stylesheet" />
                    <div>
                        <div class="form-mid-w3ls">
                            <p>Carro Modelo</p>
                            @Html.TextBox("nEF", "", new { @placeholder = "Modelo" })
                        </div>
                    </div>

                    <div>
                        <div class="form-mid-w3ls">
                            <p>Marca</p>
                            @Html.DropDownList("idMarca", new SelectList(ViewBag.listCarro, "idMarca", "nMarca"))
                        </div>
