@model IEnumerable<FinanzasTrabajoFinal.Models.carro>

@{
    ViewBag.Title = "Carros Page";
    var estado = (Int32)Session["estado"];
}

<body class="tm-dark-bg">

    
    <section class="tm-dark-bg text-center">
        <div class="py-5">
            <div class="container">

                <div class="row">

                    @{
                        foreach (var item in Model)
                        {
                            using (Html.BeginForm("Index", "Home"))
                            {
                                <div class="margin-top-50 col-md-4">
                                    <div class="card mb-4 shadow-sm">
                                        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" style="height: 225px; width: 100%; display: block;" src="~/images/logos/nissan4.png" data-holder-rendered="true">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <font style="vertical-align: inherit;">
                                                    <font style="vertical-align: inherit;color:white">
                                                        @item.NCarro
                                                    </font>
                                                    <font style="vertical-align: inherit;color:white">
                                                        S/.@String.Format("{0:n}", (item.Precio))
                                                    </font>
                                                </font>
                                            </p>
                                            @switch (estado)
                                            {
                                                case 2:
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="btn-group">
                                                            @Html.ActionLink("Editar", "Edit", new { id = @item.idCarro }) / @Html.ActionLink("Borrar", "Delete", new { id = @item.idCarro })
                                                        </div>
                                                        <small class="text-muted"><font style="vertical-align: inherit;"></font></small>
                                                    </div>
                                                    break;

                                                default:
                                                    break;
                                            }


                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                    @if (estado == 2)
                    {
                        <div class="margin-top-50 col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <div class="card-body">
                                    <p class="card-text">
                                        <font style="vertical-align: inherit;">
                                            <div style="margin-top:80px">
                                                @Html.ActionLink("Agregar", "Create")
                                            </div>
                                        </font>
                                    </p>

                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>

    </section>


</body>